
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new experience</h3>
        <%= simple_form_for @activity do |f| %>
          <%= f.input :title, placeholder: 'Cooking class' %>
          <%= f.input :price, placeholder: '100' %>
          <%= f.input :location,
            input_html: {data: {address_autocomplete_target: "address"}},
            wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
          %>
          <%= f.input :max_people, placeholder: 2 %>
          <%= f.association :category, placeholder: 'Corporate Services' %>
           <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

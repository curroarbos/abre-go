<div class="container my-4 custom-bg-color rounded">
  <div class="p-3">
    <div class="row align-items-center">
      <div class="col-lg-2">
        <% if @property.user.photo.attached? %>
          <%= cl_image_tag @property.user.photo.key, class: "avatar-lg dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false"} %>
        <% else %>
          <img class="avatar-lg dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://cdn-icons-png.flaticon.com/512/8765/8765781.png" />
        <% end %>
      </div>
      <div class="col-lg-10">
        <h4 class="text-body-emphasis">Hello from your landlord ðŸ‘‹ </h4>
        <p class="fs-5 text-muted italicized">
          Welcome to <strong> <%= @property.name %> </strong> in Bali. To help you organize your holiday, I have put a list below with my favorite recommendations.
        </p>
      </div>
    </div>
  </div>
</div>


<section class="pt-3 pb-3">
  <div class="container">
    <div class="row">
      <div class="col-6">
      <% activities = @recommendations.select { |recommendation| recommendation if recommendation.recommendable_type == 'Activity'} %>
        <h4 class="mb-3">Recommended in-house activities</h4>
      </div>
      <div class="col-6 text-right">
        <a class="btn btn-primary mb-3 mr-1" href="#carouselExampleIndicators1" role="button" data-slide="prev">
          <i class="fa fa-arrow-left"></i>
        </a>
        <a class="btn btn-primary mb-3 " href="#carouselExampleIndicators1" role="button" data-slide="next">
          <i class="fa fa-arrow-right"></i>
        </a>
      </div>
      <div class="col-12">
        <div id="carouselExampleIndicators1" class="carousel slide" data-ride="carousel" data-interval="false">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <div class="row">
                  <% activities.first(4).each do |activity| %>
                    <div class="col-md-3 mb-3">
                      <div class="card-carousel">
                      <%= link_to activity_path(activity.recommendable, property_id: @property), class: "text-decoration-none text-dark" do %>
                        <% if !activity.recommendable.photo_url.nil?  %>
                          <img class="img-fluid" alt="100%x280" src="<%= activity.recommendable.photo_url %>">
                        <% else %>
                          <img class="img-fluid" alt="100%x280" src="<%= cl_image_path activity.photo.key, height: 300, crop: :fill %>">
                        <% end %>
                        <div class="card-carousel-body pt-2 p-2">
                          <div class="d-flex justify-content-between">
                            <h5 class="card-title"> <%= activity.recommendable.title %> </h5>
                            <p class="text-muted font-weight-normal">
                              <%# Get average rating %>
                              <% if activity.recommendable.reviews.present? %>
                              <% average_rating = activity.recommendable.reviews.average(:rating).to_f %>
                              <%= "%.1f" % average_rating %><i class="fas fa-star star-yellow"></i>
                              <% else %>
                                New
                              <% end %>
                            </p>
                          </div>
                            <p class="card-text"> <%= activity.recommendable.price %> â‚¬ </p>
                        </div>
                      <% end %>
                    </div>
                  </div>
                  <% end %>
              </div>
            </div>

            <div class="carousel-item">
              <div class="row">
                  <% activities[3...7].each do |activity| %>
                    <div class="col-md-3 mb-3">
                      <div class="card-carousel">
                      <%= link_to activity_path(activity.recommendable, property_id: @property), class: "text-decoration-none text-dark" do %>
                        <% if !activity.recommendable.photo_url.nil?  %>
                          <img class="img-fluid" alt="100%x280" src="<%= activity.recommendable.photo_url %>">
                        <% else %>
                          <img class="img-fluid" alt="100%x280" src="<%= cl_image_path activity.recommendable.photo.key, height: 300, crop: :fill %>">
                        <% end %>
                        <div class="card-carousel-body pt-2 p-2">
                          <div class="d-flex justify-content-between">
                            <h5 class="card-title"> <%= activity.recommendable.title %> </h5>
                            <p class="text-muted font-weight-normal">
                              <%# Get average rating %>
                              <% if activity.recommendable.reviews.present? %>
                              <% average_rating = activity.recommendable.reviews.average(:rating).to_f %>
                              <%= "%.1f" % average_rating %>
                              <i class="fas fa-star star-yellow"></i>
                              <% else %>
                                New
                              <% end %>
                            </p>
                          </div>
                            <p class="card-text"> <%= activity.recommendable.price %> â‚¬ </p>
                        </div>
                      <% end %>
                    </div>
                  </div>
                  <% end %>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
   </div>
</section>



